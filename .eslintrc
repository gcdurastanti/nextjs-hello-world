{
	"root": true,
	"extends": [
		"eslint:recommended",
		"prettier",
		"plugin:react/recommended",
		"plugin:jsx-control-statements/recommended"
	],
	"plugins": [
		"react",
		"jsx-control-statements"
	],
	"parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
		"semi": 2,
		"no-trailing-spaces": 2
	},
	"env": {
		"jsx-control-statements/jsx-control-statements": true
	}
}
